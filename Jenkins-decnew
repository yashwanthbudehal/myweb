pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'yash', url: 'https://github.com/yashwanthbudehal/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new1']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@172.31.26.58:/home/ec2-user/apache-tomcat-9.0.106/webapps/
                    
                    ssh ec2-user@172.31.26.58 /home/ec2-user/apache-tomcat-9.0.106/bin/shutdown.sh
                    
                    ssh ec2-user@172.31.26.58 /home/ec2-user/apache-tomcat-9.0.106/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
