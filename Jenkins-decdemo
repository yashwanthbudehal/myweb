pipeline{
    agent any
    tools {
        maven 'Maven-3.8.7'
    }
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("GIT checkout"){
            steps{
                git credentialsId: 'javahome', url: 'https://github.com/yashwanthbudehal/myweb.git'
                
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
         }
    }
}
